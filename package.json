{
  "author": {
    "name": "Andrew Hague",
    "email": "andrew.hague@commandercoder.com",
    "url": "https://commandercoder.com"
  },
  "name": "jsacorn",
  "description": "Emulate a BBC Micro and Acorn Atom",
  "repository": "git@github.com:CommanderCoder/JSATOM.git",
  "version": "0.0.7a",
  "engines": {
    "node": "17"
  },
  "main": "./app/app.js",
  "dependencies": {
    "argparse": "^1.0.10"
  },
  "devDependencies": {
    "electron": "^11.5.0",
    "electron-builder": "~22.10.5",
    "jshint": "^2.13.1",

    "mocha": "^7.2.0",
    "requirejs": "^2.3.6"
  },
  "license": "GPL-3.0-or-later",
  "build": {
    "appId": "org.godbolt.bbc",
    "directories": {
      "output": "out/dist"
    },
    "linux": {
      "target": "AppImage",
      "category": "Game"
    },
    "files": [
      "!tests"
    ],
    "publish": {
      "provider": "github",
      "releaseType": "release"
    }
  },
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "release": "electron-builder"
  }
}
