{
  "author": {
    "name": "Matt Godbolt",
    "email": "matt@godbolt.org",
    "url": "https://xania.org"
  },
  "name": "jsbeeb",
  "description": "Emulate a BBC Micro",
  "repository": "git@github.com:mattgodbolt/jsbeeb.git",
  "version": "0.0.7",
  "engines": {
    "node": "8"
  },
  "main": "./app/app.js",
  "dependencies": {
    "argparse": "^2.0.1"
  },
  "devDependencies": {
    "electron": "^11.5.0",
    "electron-builder": "~22.10.5",
    "eslint": "^8.4.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^5.2.0",
    "husky": "^7.0.4",
    "mocha": "^7.2.0",
    "node-png": "0.4.x",
    "requirejs": "^2.3.6"
  },
  "license": "GPL-3.0-or-later",
  "build": {
    "appId": "org.godbolt.bbc",
    "directories": {
      "output": "out/dist"
    },
    "linux": {
      "target": "AppImage",
      "category": "Game"
    },
    "files": [
      "!tests"
    ],
    "publish": {
      "provider": "github",
      "releaseType": "release"
    }
  },
  "scripts": {
    "start": "electron .",
    "prepare": "husky install",
    "lint": "eslint .",
    "lint-fix": "eslint . --fix",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "release": "electron-builder"
  }
}
